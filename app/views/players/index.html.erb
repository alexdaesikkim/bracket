<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Challonge player</th>
      <th>Qualifier score</th>
      <th>Seed</th>
      <th>Place</th>
      <th>Tournament</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.email %></td>
        <td><%= player.phone %></td>
        <td><%= player.challonge_player_id %></td>
        <td><%= player.qualifier_score %></td>
        <td><%= player.seed %></td>
        <td><%= player.place %></td>
        <td><%= player.tournament_id %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

