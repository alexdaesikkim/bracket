<%= form_for(tournament) do |f| %>
  <% if tournament.errors.any? %>
    <% tournament.errors.full_messages.each do |message| %>
      <div class="alert alert-danger" role="alert">
        <%= message %>
      </div>
    <% end %>
  <% end %>

  <div class="form-group">
    <div class="row">
      <%= f.label :name, "Tournament Name", class: "col-md-2 control label" %>
      <div class="col-md-12">
        <%= f.text_field :name, class: "form-control"%>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row">
      <%= f.label :event, "Event Name", class: "col-md-2 control label" %>
      <div class="col-md-12">
        <%= f.text_field :event, class: "form-control"%>
      </div>
    </div>
  </div>
  <div>
    <div>
      Select Game
      <%= f.collection_select :game_id, Game.all, :id, :full_name, {:include_blank => false, :selected => params[:game_id] }, {class: "form-control"} %>
      <br>
    </div>
  </div>
  <%= f.hidden_field :main_stage, :value => false %>
  <%= f.hidden_field :qualifier_stage, :value => false %>
  <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
<% end %>
  
